setup do |project|
  set_env ->() { :test }

  set_configs_dir 'configs'
  set_package_dir 'package'

  set_loader :zeitwerk do
    inflect 'uuid_generator' => "UUIDGenerator"
    overwrite ->(klass_name) { klass_name.gsub(/Api/) { _1.upcase } }
    ignore "#{project.root}/**/schema_migrations"
  end
end